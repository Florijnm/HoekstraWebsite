@page
@model Website_Hoekstra.Pages.LoginModel

<div>
    <form method="post" asp-page-handler="tryAddUser">
        <input type="text" placeholder="Username" value="@Model.NewUser.username" name="username"/><br>
        <input type="email" placeholder="Email" value="@Model.NewUser.email" name="email"/><br>
        <input type="text" placeholder="First Name" value="@Model.NewUser.first_name" name="first_name">
        <input type="text" placeholder="Last Name" value="@Model.NewUser.last_name" name="last_name"><br>
        <input type="password" placeholder="Password" value="@Model.NewUser.password" name="password">
        
        <button type="submit">Register</button>
        
    </form>
</div>